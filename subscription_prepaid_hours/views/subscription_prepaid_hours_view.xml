<?xml version="1.0" encoding="UTF-8"?>

<openerp>
    <data>

        <!-- Adds prepaid_hours_id to invoice configuration in sale.subscription view -->
        <!-- Form -->
        <record id="subscription_view_invoice_form" model="ir.ui.view">
            <field name="name">Invoice Configuration Prepaid Id</field>
            <field name="model">sale.subscription</field>
            <field name="priority" eval="160" />
            <field name="inherit_id"
                ref="project_work_type.subscription_view_invoice_type_form"/>
            <field name="arch" type="xml">
                <xpath expr="//notebook/page/div/field/tree/field[@name='price']"
                    position="after">
                    <field name="prepaid_hours_id"/>
                </xpath>
            </field>
        </record>

        <!-- Adds prepaid hours tree to a client's subscription. The tree is
         editable and allows the creation/update/removal of prepaid hours.-->
        <record id="subscription_view_prepaid_hours_form" model="ir.ui.view">
            <field name="name">Prepaid Hours</field>
            <field name="model">sale.subscription</field>
            <field name="priority" eval="160" />
            <field name="inherit_id"
                ref="sale_contract.sale_subscription_view_form" />
            <field name="arch" type="xml">
                <xpath expr="//notebook" position="inside">
                    <page string="Prepaid Hours" name="prepaid_hours">
                        <field name="prepaid_hours_id">
                            <tree editable="bottom">
                                <field name="name"/>
                                <field name="quantity"/>
                                <field name="date"/>
                                <field name="active"/>
                            </tree>
                        </field>
                    </page>
                </xpath>
           </field>
       </record>

       <!-- approval line -->
       <!-- Tree -->
       <record id="view_prepaid_hours_approval_line_tree" model="ir.ui.view">
            <field name="name">view.prepaid.hours.approval.line.tree</field>
            <field name="model">account.analytic.prepaid_hours_approval_line</field>
            <field name="type">tree</field>
            <field name="priority" eval="16" />
            <field name="arch" type="xml">
                <tree string="Approval Lines" name="approval lines">
                    <field name="prepaid_hours_id" />
                    <field name="work_type_id" />
                    <field name="approval_id" />
                    <field name="requested_hours" />
                    <field name="extra_hours" />
                    <field name="extra_amount" />
                </tree>
            </field>
       </record>

       <!-- approval values -->
       <!-- Tree -->
       <record id="view_prepaid_hours_approved_values_tree" model="ir.ui.view">
            <field name="name">view.prepaid.hours.approved.values.tree</field>
            <field name="model">account.analytic.prepaid_hours_approved_values</field>
            <field name="type">tree</field>
            <field name="priority" eval="16" />
            <field name="arch" type="xml">
                <tree string="Approved Values" name="approved values">
                    <field name="prepaid_hours_id" />
                    <field name="prepaid_hours" />
                    <field name="expent_hours" />
                    <field name="remaining_hours" />
                    <field name="tobe_approve" />
                    <field name="requested_hours" />
                    <field name="extra_hours" />
                    <field name="extra_amount" />
                    <field name="approval_id" />
                </tree>
            </field>
       </record>
    </data>
</openerp>
