<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <!-- Hr Config Settings Form View -->
        <record id="view_account_configuration_setup" model="ir.ui.view">
            <field name="name">hr.config.settings</field>
            <field name="model">hr.config.settings</field>
            <field name="arch" type="xml">
                <form string="Configure" class="oe_form_configuration">
                    <header>
                        <button string="Apply" type="object" name="execute" class="oe_highlight"/>
                        or
                        <button string="Cancel" type="object" name="cancel" class="oe_link"/>
                    </header>
                    <separator string="ClearCorp hr Setup"/>
                    <div>
                        <p>
                            <label
                                string="Allows you to configure options related to hr for your business according to Clearcorp customizations. You may also find some tools that makes your life easier while workign with Odoo."/>
                        </p>
                    </div>
                    <group string="HR">
                        <label for="id" string="Config"/>
                        <div name="Config">
                            <div name='module_hr_contract_extended'>
                                <field name="module_hr_contract_extended"
                                    class="oe_inline"/>
                                <label for="module_hr_contract_extended"/>
                            </div>
                            <div name='module_hr_personnel_actions'>
                                <field name="module_hr_personnel_actions"
                                    class="oe_inline"/>
                                <label for="module_hr_personnel_actions"/>
                            </div>
                            <div name='module_hr_wage_increase'>
                                <field name="module_hr_wage_increase"
                                    class="oe_inline"/>
                                <label for="module_hr_wage_increase"/>
                            </div>
                        </div>
                    </group>
                </form>
            </field>
        </record>

    <!-- Hr Config Settings Action -->
    <record id="action_clearcorp_hr_setup" model="ir.actions.act_window">
        <field name="name">ClearCorp HR Setup</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">hr.config.settings</field>
        <field name="view_mode">form</field>
        <field name="target">inline</field>
    </record>
    
    <!-- Hr Config Settings Menu -->
    <menuitem id="menu_clearcorp_hr_setup" action="action_clearcorp_hr_setup"
        name="ClearCorp HR Setup" parent="base.menu_config" sequence="114"/>
    </data>
</openerp>
