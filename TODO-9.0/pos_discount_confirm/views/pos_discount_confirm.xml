<?xml version="1.0" encoding="utf-8"?>

<openerp>
    <data>
        <template id="assets_backend" name="pos_discount_confirm assets" inherit_id="web.assets_backend">
            <xpath expr="." position="inside">
                <script type="text/javascript" src="/pos_discount_confirm/static/src/js/discount_confirm.js"></script>
            </xpath>
        </template>

        <template id="index" name="pos_discount_confirm index" inherit_id="point_of_sale.index">
            <xpath expr="//link[@id='pos-stylesheet']" position="after">
                <link rel="stylesheet" href="/pos_discount_confirm/static/src/css/discount_confirm.css" id="pos_discount_confirm-stylesheet"/>
            </xpath>
        </template>
    </data>
</openerp>