<?xml version="1.0" encoding="utf-8"?>

<openerp>
    <data>
        <template id="assets_backend" name="pos_price_confirm assets" inherit_id="web.assets_backend">
            <xpath expr="." position="inside">
                <script type="text/javascript" src="/pos_price_confirm/static/src/js/price_confirm.js"></script>
            </xpath>
        </template>

        <template id="index" name="pos_price_confirm index" inherit_id="point_of_sale.index">
            <xpath expr="//link[@id='pos-stylesheet']" position="after">
                <link rel="stylesheet" href="/pos_price_confirm/static/src/css/price_confirm.css" id="pos_price_confirm-stylesheet"/>
            </xpath>
        </template>
    </data>
</openerp>