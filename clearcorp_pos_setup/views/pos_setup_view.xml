<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <!-- POS Config Settings Form View -->
        <record id="view_pos_configuration_setup" model="ir.ui.view">
            <field name="name">pos.config.settings</field>
            <field name="model">pos.config.settings</field>
            <field name="arch" type="xml">
                <form string="Configure" class="oe_form_configuration">
                    <header>
                        <button string="Apply" type="object" name="execute" class="oe_highlight"/>
                        or
                        <button string="Cancel" type="object" name="cancel" class="oe_link"/>
                    </header>
                    <separator string="ClearCorp POS Setup"/>
                    <div>
                        <p>
                            <label
                                string="Allows you to configure options related to POS for your business according to Clearcorp customizations. You may also find some tools that makes your life easier while workign with Odoo."/>
                        </p>
                    </div>
                    <group string="POS">
                        <label for="id" string="Config"/>
                        <div name="Config">
                            <div name='module_product_label'>
                                <field name="module_product_label"
                                    class="oe_inline"/>
                                <label for="module_product_label"/>
                            </div>
                        </div>
                    </group>
                </form>
            </field>
        </record>

    <!-- POS Config Settings Action -->
    <record id="action_clearcorp_pos_setup" model="ir.actions.act_window">
        <field name="name">ClearCorp POS Setup</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">pos.config.settings</field>
        <field name="view_mode">form</field>
        <field name="target">inline</field>
    </record>
    
    <!-- POS Config Settings Menu -->
    <menuitem id="menu_clearcorp_pos_setup" action="action_clearcorp_pos_setup"
        name="ClearCorp POS Setup" parent="base.menu_config" sequence="115"/>
    </data>
</openerp>
