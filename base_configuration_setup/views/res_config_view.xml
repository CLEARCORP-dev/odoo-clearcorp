<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <!-- Base Config Settings Form View -->
        <record id="view_base_configuration_setup" model="ir.ui.view">
            <field name="name">base.config.settings</field>
            <field name="model">base.config.settings</field>
            <field name="arch" type="xml">
                <form string="Configure" class="oe_form_configuration">
                    <header>
                        <button string="Apply" type="object" name="execute" class="oe_highlight"/>
                        or
                        <button string="Cancel" type="object" name="cancel" class="oe_link"/>
                    </header>
                    <separator string="ClearCorp Base Setup"/>
                    <div>
                        <p>
                            <label
                                string="Allows you to configure options related to products, sales, purchase, warehouse and finance for your business according to argentinian common uses and Clearcorp customizations. You may also find some tools that makes your life easier while workign with Odoo."/>
                        </p>
                    </div>

                    <group string="Products">
                    </group>

                    <group string="Accounting">
                        <label for="id" string="Config"/>
                        <div name="Config">
                            <div name='module_account_invoice_ticket'>
                                <field name="module_account_invoice_ticket"
                                    class="oe_inline"/>
                                <label for="module_account_invoice_ticket"/>
                            </div>
                            <div name='module_account_payment_report'>
                                <field name="module_account_payment_report"
                                    class="oe_inline"/>
                                <label for="module_account_payment_report"/>
                            </div>
                            <div name='module_base_company_prefix'>
                                <field name="module_base_company_prefix"
                                    class="oe_inline"/>
                                <label for="module_base_company_prefix"/>
                            </div>
                            <div name='module_partner_defaulter'>
                                <field name="module_partner_defaulter"
                                    class="oe_inline"/>
                                <label for="module_partner_defaulter"/>
                            </div>
                        </div>
                    </group>

                    <group string="Sales">
                        <label for="id" string="Config"/>
                        <div name="Config">
                            <div name='module_sale_order_discount'>
                                <field name="module_sale_order_discount"
                                    class="oe_inline"/>
                                <label for="module_sale_order_discount"/>
                            </div>
                            <div name='module_account_payment_report'>
                                <field name="module_account_payment_report"
                                    class="oe_inline"/>
                                <label for="module_account_payment_report"/>
                            </div>
                            <div name='module_sales_team_multicompany'>
                                <field name="module_sales_team_multicompany"
                                    class="oe_inline"/>
                                <label for="module_sales_team_multicompany"/>
                            </div>
                            <div name='module_product_label'>
                                <field name="module_product_label"
                                    class="oe_inline"/>
                                <label for="module_product_label"/>
                            </div>
                        </div>
                    </group>
        
                    <group string="Purchases">
                    </group>
        
                    <group string="Payroll">
                    </group>
        
                    <group string="Base">
                        <label for="id" string="Config"/>
                        <div name="Config">
                            <div name='module_force_no_demo_data'>
                                <field name="module_force_no_demo_data"
                                    class="oe_inline"/>
                                <label for="module_force_no_demo_data"/>
                            </div>
                            <div name='module_auth_signup_verify_email'>
                                <field name="module_auth_signup_verify_email"
                                    class="oe_inline"/>
                                <label for="module_auth_signup_verify_email"/>
                            </div>
                            <div name='module_auth_supplier'>
                                <field name="module_auth_supplier"
                                    class="oe_inline"/>
                                <label for="module_auth_supplier"/>
                            </div>
                            <div name='module_base_user_gravatar'>
                                <field name="module_base_user_gravatar"
                                    class="oe_inline"/>
                                <label for="module_base_user_gravatar"/>
                            </div>
                            <div name='module_database_cleanup'>
                                <field name="module_database_cleanup"
                                    class="oe_inline"/>
                                <label for="module_database_cleanup"/>
                            </div>
                            <div name='module_disable_odoo_online'>
                                <field name="module_disable_odoo_online"
                                    class="oe_inline"/>
                                <label for="module_disable_odoo_online"/>
                            </div>
                            <div name='module_users_ldap_mail'>
                                <field name="module_users_ldap_mail"
                                    class="oe_inline"/>
                                <label for="module_users_ldap_mail"/>
                            </div>
                            <div name='module_users_ldap_populate'>
                                <field name="module_users_ldap_populate"
                                    class="oe_inline"/>
                                <label for="module_users_ldap_populate"/>
                            </div>
                            <div name='module_web_searchbar_full_width'>
                                <field name="module_web_searchbar_full_width"
                                    class="oe_inline"/>
                                <label for="module_web_searchbar_full_width"/>
                            </div>
                            <div name='module_web_send_message_popup'>
                                <field name="module_web_send_message_popup"
                                    class="oe_inline"/>
                                <label for="module_web_send_message_popup"/>
                            </div>
                            <div name='module_web_widget_timepicker'>
                                <field name="module_web_widget_timepicker"
                                    class="oe_inline"/>
                                <label for="module_web_widget_timepicker"/>
                            </div>
                            <div name='module_sale_automatic_workflow'>
                                <field name="module_sale_automatic_workflow"
                                    class="oe_inline"/>
                                <label for="module_sale_automatic_workflow"/>
                            </div>
                            <div name='module_sale_exception'>
                                <field name="module_sale_exception"
                                    class="oe_inline"/>
                                <label for="module_sale_exception"/>
                            </div>
                        </div>
                    </group>
        
                    <group string="HR">
                        <label for="id" string="Config"/>
                        <div name="Config">
                            <div name='module_hr_contract_extended'>
                                <field name="module_hr_contract_extended"
                                    class="oe_inline"/>
                                <label for="module_hr_contract_extended"/>
                            </div>
                            <div name='module_hr_personnel_actions'>
                                <field name="module_hr_personnel_actions"
                                    class="oe_inline"/>
                                <label for="module_hr_personnel_actions"/>
                            </div>
                            <div name='module_hr_wage_increase'>
                                <field name="module_hr_wage_increase"
                                    class="oe_inline"/>
                                <label for="module_hr_wage_increase"/>
                            </div>
                        </div>
                    </group>

                </form>
            </field>
        </record>

    <!-- Base Config Settings Action -->
    <record id="action_clearcorp_base_setup" model="ir.actions.act_window">
        <field name="name">ClearCorp Base Setup</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">base.config.settings</field>
        <field name="view_mode">form</field>
        <field name="target">inline</field>
    </record>
    
    <!-- Base Config Settings Menu -->
    <menuitem id="menu_clearcorp_base_setup" action="action_clearcorp_base_setup"
        name="ClearCorp Base Setup" parent="base.menu_config" sequence="112"/>

    </data>
</openerp>
