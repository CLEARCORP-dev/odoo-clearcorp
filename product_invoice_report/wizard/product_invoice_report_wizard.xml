<openerp>
    <data>

		<!--Wizard Report-->
		<record model="ir.ui.view" id="product_invoice_report_wizard_view">
            <field name="name">product.invoice.report.wizard</field>
            <field name="model">invoice.report.wiz</field>
            <field name="priority" eval="16"/>
            <field name="arch" type="xml">
                <form string="Report Options" version="7.0">
                 	<group cols="4">
                 		<field name="sortby"/>
                 		<field name="filter"/>
                 		<field name="date_from" attrs="{'required':[('filter','=','filter_date')], 'invisible':[('filter','!=','filter_date')]}"/>
                 		<field name="date_to" attrs="{'required':[('filter','=','filter_date')], 'invisible':[('filter','!=','filter_date')]}"/>
                 		<field name="fiscalyear_id"  attrs="{'required':[('filter','=','filter_period')], 'invisible':[('filter','!=','filter_period')]}"/>
                 		<field name="period_from" domain="[('fiscalyear_id', '=', fiscalyear_id)]" attrs="{'required':[('filter','=','filter_period')], 'invisible':[('filter','!=','filter_period')]}"/>
                 		<field name="period_to" domain="[('fiscalyear_id', '=', fiscalyear_id)]" attrs="{'required':[('filter','=','filter_period')], 'invisible':[('filter','!=','filter_period')]}"/>
                 		<field name="partner_ids"/>
                 	</group>
                    <footer>
                        <button type="object" string="Go Report" icon="gtk-ok" class="oe_highlight" />
                            or
                        <button type="special" special="cancel" string="Cancel" class="oe_link" />
                    </footer>
                </form>
            </field>
        </record>

        <record id="action_product_invoice_report_wizard" model="ir.actions.act_window">
            <field name="name">Product Invoice Report Wizard</field>
            <field name="res_model">invoice.report.wiz</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="product_invoice_report_wizard_view"/>
            <field name="target">new</field>
        </record>
    </data>
</openerp>