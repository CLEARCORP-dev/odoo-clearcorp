<openerp>
    <data>
        <record id="product_invoice_report_wizard_view" model="ir.ui.view">
            <field name="name">Product Invoice Report Wizard</field>
            <field name="model">product.invoice.report.wiz</field>
            <field name="arch" type="xml">
                <form string="Report Options" version="7.0">
                   
                    <footer>
                        <button name="check_report" string="Print" type="object" default_focus="1" class="oe_highlight"/>
                        or 
                        <button string="Cancel" class="oe_link" special="cancel" />
                    </footer>
                </form>
            </field>
        </record>

        <record id="action_product_invoice_report_wizard" model="ir.actions.act_window">
            <field name="name">Product Invoice Report Wizard</field>
            <field name="res_model">product.invoice.report.wiz</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="product_invoice_report_wizard_view"/>
            <field name="target">new</field>
        </record>

    </data>
</openerp>